#--------------------------------------------------------------------
# Example Environment Configuration file
#
# This file can be used as a starting point for your own
# custom .env files, and contains most of the possible settings
# you might want to configure.
#
# By default, all of the settings are commented out, and the
# default values will be used.
#--------------------------------------------------------------------

# .env for LibraryIS Frontend

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development
# CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.forceGlobalSecureRequests = false

# App Index File
# Typically this will be your index.php file, unless
# you've renamed it to something else.
# app.indexPage = 'index.php'

# If you have database or uploads going to paths that provide security
# concerns, you might want to have the user go to a specific
# front controller instead. But this cannot be in the main web
# root to prevent it from being globally accessible from the web.
# app.uriProtocol = 'REQUEST_URI'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = library_db
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# API Configuration
#--------------------------------------------------------------------

# Backend API Base URL
API_BASE_URL = 'http://localhost:3000/api'

# API Request Timeout (in seconds)
API_TIMEOUT = 10

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Token Secret (for JWT if needed)
TOKEN_SECRET = 'your-secret-key-here'

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'FileHandler'
session.cookieName = 'LibraryIS'
session.expiration = 7200
session.savePath = WRITEPATH . 'session'
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# COOKIES
#--------------------------------------------------------------------

cookie.prefix = ''
cookie.expires = 0
cookie.path = '/'
cookie.domain = ''
cookie.secure = false
cookie.httponly = true
cookie.samesite = 'Lax'

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

encryption.key = 
encryption.driver = OpenSSL

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY
#--------------------------------------------------------------------

CSPEnabled = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

log.threshold = 4
log.dateFormat = 'Y-m-d H:i:s'
log.handlers = CodeIgniter\Logs\Handlers\FileHandler

#--------------------------------------------------------------------
# CURLRequest
#--------------------------------------------------------------------

curlrequest.shareOptions = true
